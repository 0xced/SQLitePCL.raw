<Project Sdk="MSBuild.Sdk.Extras">
	<PropertyGroup>
		<TargetFrameworks>MonoAndroid80</TargetFrameworks>
		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>
		<SignAssembly>true</SignAssembly>
		<AssemblyOriginatorKeyFile>..\..\sn\SQLitePCLRaw.lib.e_sqlcipher.snk</AssemblyOriginatorKeyFile>
	</PropertyGroup>

<ItemGroup>
    <Compile Include="..\..\src\common\embedded_init.cs" />
</ItemGroup>

  <ItemGroup>
    <EmbeddedNativeLibrary Include="$([System.IO.Path]::Combine($(cb_bin_path), 'sqlcipher', 'android', 'x86', 'libsqlcipher.so'))">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>x86\libe_sqlcipher.so</Link>
    </EmbeddedNativeLibrary>
    <EmbeddedNativeLibrary Include="$([System.IO.Path]::Combine($(cb_bin_path), 'sqlcipher', 'android', 'x86_64', 'libsqlcipher.so'))">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>x86_64\libe_sqlcipher.so</Link>
    </EmbeddedNativeLibrary>
    <EmbeddedNativeLibrary Include="$([System.IO.Path]::Combine($(cb_bin_path), 'sqlcipher', 'android', 'armeabi', 'libsqlcipher.so'))">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>armeabi\libe_sqlcipher.so</Link>
    </EmbeddedNativeLibrary>
    <EmbeddedNativeLibrary Include="$([System.IO.Path]::Combine($(cb_bin_path), 'sqlcipher', 'android', 'arm64-v8a', 'libsqlcipher.so'))">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>arm64-v8a\libe_sqlcipher.so</Link>
    </EmbeddedNativeLibrary>
    <EmbeddedNativeLibrary Include="$([System.IO.Path]::Combine($(cb_bin_path), 'sqlcipher', 'android', 'armeabi-v7a', 'libsqlcipher.so'))">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Link>armeabi-v7a\libe_sqlcipher.so</Link>
    </EmbeddedNativeLibrary>
  </ItemGroup>

</Project>

